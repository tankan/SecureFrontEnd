# Dev environment variables
IMAGE_NAME=secure-frontend:1.0.0

# Redis
REDIS_IMAGE=redis
REDIS_TAG_DEV=7.4.6-alpine
REDIS_PASSWORD=dev-redis-pass

# PostgreSQL
POSTGRES_IMAGE=postgres
POSTGRES_TAG_DEV=15.13-alpine
POSTGRES_PASSWORD=dev-postgres-pass

# Database Connection
DB_HOST=postgres
DB_PORT=5432
DB_NAME=secure_frontend
DB_USER=postgres
DB_PASSWORD=dev-postgres-pass

# Nginx
NGINX_IMAGE=nginx
NGINX_TAG_DEV=1.28.0-alpine

# Prometheus
PROM_IMAGE=prom/prometheus
PROM_TAG_DEV=v3.7.1

# Grafana
GRAFANA_IMAGE=grafana/grafana
GRAFANA_TAG_DEV=12.2.1
GRAFANA_USER=admin
GRAFANA_PASSWORD=dev-grafana-pass

# ELK
ELASTIC_VERSION=8.19.5
ELASTIC_PASSWORD=dev-elastic-pass
FILEBEAT_VERSION=8.19.5

# Secrets
JWT_SECRET=dev-jwt-secret
ENCRYPTION_KEY=dev-encryption-key-32-bytes-xxxxxxxxxxxxxx

# Post-Quantum Cryptography
PQC_ENABLED=1
PQC_PROVIDER=@skairipaapps/liboqs-node
PQC_SIG_ALG=ML-DSA-65
PQC_KEM_ALG=ML-KEM-768