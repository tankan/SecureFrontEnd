# Staging 环境配置
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# JWT 配置
JWT_SECRET=staging-jwt-secret-key-for-monitoring-system-32-chars-minimum

# 加密配置
ENCRYPTION_KEY=staging-encryption-key-for-secure-frontend-system-256bit

# 数据库配置
DATABASE_URL=postgresql://postgres:staging_password@postgres:5432/secure_frontend_staging
POSTGRES_PASSWORD=staging_password

# Redis 配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=staging_redis_password

# Grafana 配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=staging_grafana_password

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# 邮件配置（用于告警）
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_FROM=alerts@secure-frontend.staging
ALERT_FROM_EMAIL=alerts@secure-frontend.staging
ALERT_TO_EMAIL=admin@secure-frontend.staging

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 安全配置
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 云存储配置
CLOUD_STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=