# Unified environment template for Docker Compose (copy to .env)
# Production MUST use fixed tags; Staging mirrors Production; Dev can bump with review.

# Application image (set a fixed tag in Production)
IMAGE_NAME=secure-frontend:1.0.0

# Redis
REDIS_IMAGE=redis
REDIS_TAG_DEV=7.4.6-alpine
REDIS_TAG_STAGING=7.4.6-alpine
REDIS_TAG_PROD=7.4.6-alpine

# PostgreSQL
POSTGRES_IMAGE=postgres
POSTGRES_TAG_DEV=15.13-alpine
POSTGRES_TAG_STAGING=15.13-alpine
POSTGRES_TAG_PROD=15.13-alpine

# Nginx
NGINX_IMAGE=nginx
NGINX_TAG_DEV=1.28.0-alpine
NGINX_TAG_STAGING=1.28.0-alpine
NGINX_TAG_PROD=1.28.0-alpine

# Prometheus
PROM_IMAGE=prom/prometheus
PROM_TAG_DEV=v3.7.1
PROM_TAG_STAGING=v3.7.1
PROM_TAG_PROD=v3.7.1

# Grafana
GRAFANA_IMAGE=grafana/grafana
GRAFANA_TAG_DEV=12.2.1
GRAFANA_TAG_STAGING=12.2.1
GRAFANA_TAG_PROD=12.2.1

# Alertmanager
ALERTMANAGER_IMAGE=prom/alertmanager
ALERTMANAGER_TAG_STAGING=v0.28.1
ALERTMANAGER_TAG_PROD=v0.28.1

# Healthcheck (curl)
CURL_IMAGE=curlimages/curl
CURL_TAG_STAGING=8.16.0

# ELK
ELASTIC_VERSION=8.19.5
FILEBEAT_VERSION=8.19.5

# Common secrets (fill in for your envs)
JWT_SECRET=replace-with-strong-secret
ENCRYPTION_KEY=replace-with-32-bytes-key
REDIS_PASSWORD=replace-with-strong-password
POSTGRES_PASSWORD=replace-with-strong-password
POSTGRES_REPLICATION_PASSWORD=replace-with-strong-password
ELASTIC_PASSWORD=replace-with-strong-password
GRAFANA_PASSWORD=replace-with-strong-password
GRAFANA_USER=admin